<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_gral"
    android:theme="@style/Theme.AppCompat.Light">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerAsistencias"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/asldkf" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabsMesesAsistencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D3863"
        android:elevation="6dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:tabGravity="center"
        app:tabIndicatorColor="#307095"
        app:tabIndicatorHeight="5dp"
        app:tabMode="scrollable"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget" />

    <TextView
        android:id="@+id/txtAlumno_Uac_Asis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabsMesesAsistencias"
        android:layout_marginTop="15dp"
        android:text="Nombre del alumno"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="16sp"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/asldkf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAlumno_Uac_Asis"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="5">

        <RelativeLayout
            android:id="@+id/rLSpinnerAsistencias"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:visibility="visible">

            <Spinner
                android:id="@+id/spinnerAlumno_Uac_Asis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_input_text_login"
                android:paddingBottom="4dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp" />

            <ImageView
                android:id="@+id/ivFlechitaAbajo"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignBottom="@+id/spinnerAlumno_Uac_Asis"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:scaleType="centerInside"
                android:src="@mipmap/icono_drop" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivAgregar"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:src="@drawable/ico_mas_agenda"
            android:visibility="visible" />

    </LinearLayout>

    <EditText
        android:id="@+id/etNombreCicloAsistencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAlumno_Uac_Asis"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_input_text_login"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="Sin ciclo escolar asignado"
        android:textAlignment="center"
        android:textColor="#0D3863"
        android:visibility="gone" />

</RelativeLayout>
