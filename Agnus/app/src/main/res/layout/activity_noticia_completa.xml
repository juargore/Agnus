<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_gral">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Contenedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="#99E6E6E6">


            <ImageView
                android:id="@+id/imgFotoNoticiaCompleta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/linearLayout4"
                android:layout_below="@+id/txtFechaNoticiaCompleta"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                card_view:srcCompat="@drawable/cucea_panoramica" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:alpha=".8"
                android:background="#0D3863"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtTituloNoticiaCompleta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-condensed"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtFechaNoticiaCompleta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="#307095"
                android:fontFamily="sans-serif-condensed"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/Contenedor"
        android:layout_alignStart="@+id/Contenedor"
        android:layout_below="@+id/Contenedor"
        android:layout_marginBottom="5dp"
        android:background="#0D3863"
        android:orientation="vertical"></LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Contenedor"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/linearLayout2"
        android:layout_alignRight="@+id/Contenedor"
        android:layout_alignEnd="@+id/Contenedor"
        android:layout_alignBottom="@+id/linearLayout2">

        <LinearLayout
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSubtituloNoticiaCompleta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:textColor="@color/cardview_dark_background" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>