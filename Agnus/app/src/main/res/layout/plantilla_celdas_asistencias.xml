<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listaAsistencia"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/rLayAsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">


        <LinearLayout
            android:id="@+id/layAsisC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:background="#0D3863"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/txtAlumno_Materia_Asis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-condensed"
                    android:maxLines="1"
                    android:text="BIOLOGIA IV INICIO"
                    android:textColor="#0D3863"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/txtCodigo_Profe_Asis"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="3"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-condensed"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="45667879"
                        android:textColor="#385723"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtStatus_Asis"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="2"
                        android:text="B4"
                        android:textAlignment="textEnd"
                        android:textColor="#000"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rLColorAsis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:background="#00A65A">

                <TextView
                    android:id="@+id/txtPorcentaje_Asis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="49/49 90%"
                    android:textAlignment="textEnd"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <!--android:textColor="#00A65A" Verde-->
            <!--android:textColor="#F39C12" Naranja-->
            <!--android:textColor="#DD4B39" Rojo-->
            <!--android:textColor="#00A7D0" Azul-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/layAsisC"
            android:layout_marginTop="8dp"
            android:background="#0D3863"
            android:orientation="horizontal"></LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>