<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listaMenuLateral"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <!-- Receives the actual messages. -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#99E6E6E6">


        <ImageView
            android:id="@+id/imgFotoNoticias"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            card_view:srcCompat="@drawable/cucea_panoramica" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:alpha=".8"
            android:background="#0D3863"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtTituloNoticias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:text="TextView"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSubtituloNoticias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:text="TextView"
                android:textColor="#fff"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtFechaNoticias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#307095"
            android:padding="4dp"
            android:text="TextView"
            android:textColor="#fff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

</android.support.v7.widget.CardView>