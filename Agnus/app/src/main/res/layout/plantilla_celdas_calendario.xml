<android.support.v7.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listaCalendario"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
    card_view:cardElevation="0dp">

    <!-- Receives the actual messages. -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingLeft="4dp"
        android:paddingTop="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/layCon"
            android:layout_marginTop="8dp"
            android:background="#0D3863"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/barraLateral"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/layCon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:background="#0D3863"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/layCon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDescriptionCalendario"
            android:layout_toEndOf="@+id/barraLateral"
            android:layout_toRightOf="@+id/barraLateral"
            android:orientation="vertical"
            android:paddingBottom="3dp">

            <LinearLayout
                android:id="@+id/layFechaInCalendario"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/calendar_icon1" />

                <TextView
                    android:id="@+id/txtFechaInCalendario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="08/14/2017"
                    android:textColor="#385723"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtHoraInCalendario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="12:00 AM"
                    android:textColor="#385723"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layFechaFinCalendario"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/calendar_icon2" />

                <TextView
                    android:id="@+id/txtFechaFinCalendario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="01/31/2018"
                    android:textColor="#C55A11"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtHoraFinCalendario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="11:59 PM"
                    android:textColor="#C55A11"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtDescriptionCalendario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtMateriaHorario"
            android:layout_alignParentTop="false"
            android:layout_alignStart="@+id/txtMateriaHorario"
            android:layout_below="@+id/txtActividadCalendario"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/barraLateral"
            android:layout_toRightOf="@+id/barraLateral"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Reunion comunitaria para tratar temas relacionados con la educacion"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtActividadCalendario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:layout_toEndOf="@+id/barraLateral"
            android:layout_toRightOf="@+id/barraLateral"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="1"
            android:paddingTop="3dp"
            android:text="SEGUIMIENTO JARDIN BOTANICO"
            android:textColor="#0D3863"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/right_arrow" />

    </RelativeLayout>

</android.support.v7.widget.CardView>